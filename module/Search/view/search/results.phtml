<h2>Results</h2>

<p>
    Found <?php echo $this->results->getTotalItemCount() ?> items.
</p>

<?php if (count($this->results)): ?>
<dl>
<?php foreach ($this->results as $item): ?>
    <dt><a href="<?php echo $item->link ?>"><?php echo $item->htmlTitle ?></a></dt>
    <dt class="link"><?php echo $item->htmlFormattedUrl ?></dt>
    <dd><?php echo $item->htmlSnippet ?></dd>

<?php endforeach ?>
</dl>

<?php
// display paginator
$paginatorUrl = $this->url('search') . sprintf('?q=%s&page=', urlencode($this->query)) . '%d';
echo $this->paginationControl($this->results, 'Sliding', 'paginator', array('url' => $paginatorUrl));
endif;
